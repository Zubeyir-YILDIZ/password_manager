<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0A0A"
    tools:context=".AyarlarActivity">


    <EditText
        android:id="@+id/editTextIsim"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ayarlar_text_alani"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:hint="İsminiz"
        android:inputType="text"
        android:paddingStart="9dp"
        android:textColor="#4CAF50"
        android:textColorHighlight="#4CAF50"
        android:textColorHint="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/editTextSoyisim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewProfilBaslik" />

    <EditText
        android:id="@+id/editTextSoyisim"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/ayarlar_text_alani"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:hint="Soyisminiz"
        android:inputType="text"
        android:paddingStart="9dp"
        android:textColor="#4CAF50"
        android:textColorHighlight="#4CAF50"
        android:textColorHint="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/editTextEpostaEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextIsim" />

    <EditText
        android:id="@+id/editTextEpostaEdit"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ayarlar_text_alani"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:hint="Email adresiniz"
        android:inputType="textEmailAddress"
        android:paddingStart="9dp"
        android:textColor="#4CAF50"
        android:textColorHighlight="#4CAF50"
        android:textColorHint="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/editTextSifreEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSoyisim" />

    <EditText
        android:id="@+id/editTextSifreEdit"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/ayarlar_text_alani"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:hint="Şifreniz"
        android:inputType="textPassword"
        android:paddingStart="9dp"
        android:textColor="#4CAF50"
        android:textColorHighlight="#4CAF50"
        android:textColorHint="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/buttonDuzenle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEpostaEdit" />

    <Button
        android:id="@+id/buttonDuzenle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#4CAF50"
        android:fontFamily="sans-serif-black"
        android:text="Düzenle"
        android:textColor="#000000"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonYedekle"
        app:layout_constraintStart_toStartOf="@+id/buttonYedekle"
        app:layout_constraintTop_toBottomOf="@+id/editTextSifreEdit" />

    <Button
        android:id="@+id/buttonYedekle"
        android:layout_width="148dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#4CAF50"
        android:fontFamily="sans-serif-black"
        android:text="Şifre Yedekle"
        android:textColor="#000000"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewYedekSil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDuzenle" />

    <Button
        android:id="@+id/buttonSifreleriGetir"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#4CAF50"
        android:fontFamily="sans-serif-black"
        android:text="Yedeklenmiş Sifreleri Getir"
        android:textColor="#000000"
        android:textSize="12sp"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewSil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewYedekSil" />

    <TextView
        android:id="@+id/textViewProfilBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:layout_marginBottom="5dp"
        android:padding="3dp"
        android:text="Profiliniz"
        android:textColor="#4CAF50"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/editTextIsim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="166dp"
        android:text="Hesabımı Sil"
        android:textColor="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonSifreleriGetir"
        app:layout_constraintStart_toStartOf="@+id/buttonSifreleriGetir"
        app:layout_constraintTop_toBottomOf="@+id/buttonSifreleriGetir" />

    <TextView
        android:id="@+id/textViewYedekSil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="10dp"
        android:text="Yedekleri Sil"
        android:textColor="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/buttonSifreleriGetir"
        app:layout_constraintStart_toStartOf="@+id/buttonYedekle"
        app:layout_constraintTop_toBottomOf="@+id/buttonYedekle" />

</androidx.constraintlayout.widget.ConstraintLayout>