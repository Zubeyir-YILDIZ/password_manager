<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaplan_rengi"
    tools:context=".Views.AyarlarActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutKisiselBilgiler"
        android:layout_width="match_parent"
        android:layout_height="334dp"
        android:background="@drawable/edit_text_cerceve_rengi"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118">

        <EditText
            android:id="@+id/editTextIsim"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_cerceve_rengi_ters"
            android:editable="false"
            android:ems="10"
            android:enabled="false"
            android:hint="@string/ayarlar_etIsÄ±m_en"
            android:inputType="text"
            android:paddingStart="9dp"
            android:textColor="@color/metin_rengi"
            android:textColorHighlight="@color/metin_rengi"
            android:textColorHint="@color/metin_rengi"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.164" />

        <EditText
            android:id="@+id/editTextSoyisim"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_cerceve_rengi_ters"
            android:editable="false"
            android:ems="10"
            android:enabled="false"
            android:hint="@string/ayarlar_etSoyisim_en"
            android:inputType="text"
            android:paddingStart="9dp"
            android:textColor="@color/metin_rengi"
            android:textColorHighlight="@color/metin_rengi"
            android:textColorHint="@color/metin_rengi"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.374" />

        <EditText
            android:id="@+id/editTextEpostaEdit"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_cerceve_rengi_ters"
            android:editable="false"
            android:ems="10"
            android:enabled="false"
            android:hint="@string/ayarlar_etMail_en"
            android:inputType="textEmailAddress"
            android:paddingStart="9dp"
            android:textColor="@color/metin_rengi"
            android:textColorHighlight="@color/metin_rengi"
            android:textColorHint="@color/metin_rengi"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.576" />

        <EditText
            android:id="@+id/editTextSifreEdit"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_cerceve_rengi_ters"
            android:editable="false"
            android:ems="10"
            android:enabled="false"
            android:hint="@string/ayarlar_etSifre_en"
            android:inputType="textPassword"
            android:paddingStart="9dp"
            android:textColor="@color/metin_rengi"
            android:textColorHighlight="@color/metin_rengi"
            android:textColorHint="@color/metin_rengi"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.776" />

        <TextView
            android:id="@+id/textViewKisiselBilgiler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableEnd="@drawable/ayarlar_asagi_ok_logo"
            android:drawableTint="@color/metin_rengi"
            android:text="@string/ayarlar_txt_kisisel_bilgileriniz_en"
            android:textColor="@color/metin_rengi"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonDuzenle"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/uygulama_rengi"
            android:fontFamily="sans-serif-black"
            android:text="@string/ayarlar_buton_duzenle_en"
            android:textColor="#000000"
            android:textStyle="bold"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutYedekle"
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:background="@drawable/edit_text_cerceve_rengi"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutKisiselBilgiler"
        app:layout_constraintVertical_bias="0.064">

        <Button
            android:id="@+id/buttonYedekle"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="@color/uygulama_rengi"
            android:fontFamily="sans-serif-black"
            android:text="@string/ayarlar_buton_yedekle_en"
            android:textColor="#000000"
            android:textStyle="bold"
            app:cornerRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewYedekSil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ayarlar_buton_sil_en"
            android:textColor="@color/metin_rengi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.612" />

        <Button
            android:id="@+id/buttonSifreleriGetir"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/uygulama_rengi"
            android:fontFamily="sans-serif-black"
            android:text="@string/ayarlar_buton_yedek_getir_en"
            android:textColor="#000000"
            android:textStyle="bold"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewYedeklemeAyari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableEnd="@drawable/ayarlar_asagi_ok_logo"
            android:drawableTint="@color/metin_rengi"
            android:text="@string/ayarlar_txt_yedekle_en"
            android:textColor="@color/metin_rengi"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textViewProfilBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="3dp"
        android:text="@string/ayarlar_baslik_en"
        android:textColor="@color/metin_rengi"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/ayarlar_hesap_sil_en"
        android:textColor="@color/metin_rengi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDiger"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:background="@drawable/edit_text_cerceve_rengi"
        android:elevation="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewSil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutYedekle">

        <TextView
            android:id="@+id/textViewDiger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableEnd="@drawable/ayarlar_asagi_ok_logo"
            android:drawableTint="@color/metin_rengi"
            android:text="@string/ayarlar_diger_baslik_en"
            android:textColor="@color/metin_rengi"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/switchAnimasyonAyar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ayarlar_animasyon_ayar_sw_en"
            android:thumbTint="@color/uygulama_rengi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.318" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>