<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SifreEkleActivity">

    <EditText
        android:id="@+id/editTextSifreSifre"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:background="#FF282A2B"
        android:ems="10"
        android:hint="Kaydedilecek şifre"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#FF9800"
        app:layout_constraintBottom_toTopOf="@+id/spinnerSifreTurleri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSelamSifre" />

    <Spinner
        android:id="@+id/spinnerSifreTurleri"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="22dp"
        android:autofillHints="Seçiniz"
        android:dropDownSelector="@android:drawable/alert_dark_frame"
        android:pointerIcon="arrow"
        android:textAlignment="center"
        android:textColor="#FF9800"
        app:layout_constraintBottom_toTopOf="@+id/buttonSifreOner"
        app:layout_constraintEnd_toStartOf="@+id/textViewEkleTip"
        app:layout_constraintStart_toEndOf="@+id/textViewSilTip"
        app:layout_constraintTop_toBottomOf="@+id/editTextSifreSifre" />

    <Button
        android:id="@+id/buttonSifreOlustur"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="31dp"
        android:backgroundTint="#FF282A2B"
        android:text="Oluştur"
        android:textColor="#FF9800"
        app:layout_constraintBottom_toBottomOf="@+id/buttonSifreOner"
        app:layout_constraintEnd_toStartOf="@+id/buttonSifreOner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonSifreOner" />

    <Button
        android:id="@+id/buttonSifreOner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="313dp"
        android:backgroundTint="#FF282A2B"
        android:text="Şifre Önerici"
        android:textColor="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonSifreOlustur"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSifreTurleri" />

    <TextView
        android:id="@+id/textViewSelamSifre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="174dp"
        android:layout_marginBottom="24dp"
        android:text="Yeni Şifre Ekle"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/editTextSifreSifre"
        app:layout_constraintStart_toStartOf="@+id/editTextSifreSifre"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEkleTip"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="10dp"
        android:text="Şifre Türü Ekle"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerSifreTurleri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinnerSifreTurleri"
        app:layout_constraintTop_toTopOf="@+id/spinnerSifreTurleri" />

    <TextView
        android:id="@+id/textViewSilTip"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="3dp"
        android:paddingTop="10dp"
        android:text="Şifre Türü Sil"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerSifreTurleri"
        app:layout_constraintEnd_toStartOf="@+id/spinnerSifreTurleri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinnerSifreTurleri" />

</androidx.constraintlayout.widget.ConstraintLayout>