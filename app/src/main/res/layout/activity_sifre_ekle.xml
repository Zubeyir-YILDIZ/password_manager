<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan_2"
    tools:context=".SifreEkleActivity">

    <EditText
        android:id="@+id/editTextSifreSifre"
        android:layout_width="253dp"
        android:layout_height="49dp"
        android:layout_marginBottom="422dp"
        android:background="@drawable/sifre_ekle_text_alani"
        android:ems="10"
        android:hint="Şifreyi giriniz"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#FF9800"
        android:textColorHint="#FF9800"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSelamSifre" />

    <Button
        android:id="@+id/buttonSifreOner"
        android:layout_width="115dp"
        android:layout_height="51dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="#FF282A2B"
        android:text="Şifre Öner"
        android:textColor="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSifreTurleri"
        app:layout_constraintVertical_bias="0.012" />

    <TextView
        android:id="@+id/textViewEkleTip"
        android:layout_width="60dp"
        android:layout_height="51dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="10dp"
        android:text="Şifre Türü Ekle"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinnerSifreTurleri"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSelamSifre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="194dp"
        android:layout_marginBottom="38dp"
        android:text="Yeni Şifre Ekle"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/editTextSifreSifre"
        app:layout_constraintEnd_toEndOf="@+id/spinnerSifreTurleri"
        app:layout_constraintStart_toStartOf="@+id/spinnerSifreTurleri"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSifreOlustur"
        android:layout_width="115dp"
        android:layout_height="51dp"
        android:layout_marginTop="39dp"
        android:backgroundTint="#FF282A2B"
        android:text="Oluştur"
        android:textColor="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonSifreOner"
        app:layout_constraintHorizontal_bias="0.858"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSifreTurleri"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewSilTip"
        android:layout_width="60dp"
        android:layout_height="51dp"
        android:paddingTop="10dp"
        android:text="Şifre Türü Sil"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinnerSifreTurleri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerSifreTurleri"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="10dp"
        android:autofillHints="Seçiniz"
        android:background="@drawable/sifre_ekle_text_alani"
        android:dropDownSelector="@android:drawable/alert_dark_frame"
        android:padding="1dp"
        android:pointerIcon="arrow"
        android:popupBackground="@drawable/sifre_ekle_text_alani"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:textColor="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewEkleTip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>